<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_marginTop="150dp"
        android:background="@drawable/post_border_style"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/box_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@drawable/post_border_style"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/box_container1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:orientation="horizontal"
                android:padding="5dp">

                <!--                <LinearLayout-->
                <!--                    android:layout_width="7dp"-->
                <!--                    android:layout_height="wrap_content"-->
                <!--                    android:layout_weight="0.3"-->
                <!--                    android:orientation="vertical">-->

                <!--&lt;!&ndash;                    <ImageView&ndash;&gt;-->
                <!--&lt;!&ndash;                        android:id="@+id/imagen_card"&ndash;&gt;-->
                <!--&lt;!&ndash;                        android:layout_width="76dp"&ndash;&gt;-->
                <!--&lt;!&ndash;                        android:layout_height="70dp"&ndash;&gt;-->
                <!--&lt;!&ndash;                        android:scaleType="centerCrop"&ndash;&gt;-->
                <!--&lt;!&ndash;                        android:src="@drawable/libros" />&ndash;&gt;-->
                <!--                </LinearLayout>-->

                <LinearLayout
                    android:layout_width="107dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.7"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/titulo_materia"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="#ff000000"
                        android:text="HOLA"/>



                    <TextView
                        android:id="@+id/concepto_items"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="#ff000000"
                        android:textSize="15dp"
                        android:textStyle="italic"
                        android:text="HOLA"/>

                    <TextView
                        android:id="@+id/descripcion_items"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#ff868686"
                        android:text="HOLA"/>

                    <TextView
                        android:id="@+id/dudas_items"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#ff868686"
                        android:text="HOLA"/>

                    <CheckBox
                        android:layout_height="26dp"
                        android:layout_width="120dp"
                        android:text="Aprendido"
                        android:layout_weight="1"
                        android:id="@+id/checkboxAprendido"
                        android:layout_marginLeft="219dp"/>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>